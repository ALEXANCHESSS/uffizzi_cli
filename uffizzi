#!/usr/bin/env ruby
# frozen_string_literal: true

formula_name = 'uffizzi-test'
command = "brew --prefix #{formula_name}"
result = IO.popen(command) { |io| io.read.chomp }
puts '1---------'
puts ENV['GEM_HOME']
puts '2---------'
puts ENV['GEM_PATH']
puts '3------------'
puts resulr

if $?.success?
  libexec_path = File.join(result, 'libexec')
  ENV['GEM_HOME'] = libexec_path
  ENV['GEM_PATH'] = libexec_path
  puts ENV['GEM_PATH']
  puts "The libexec path for #{formula_name}: #{libexec_path}"
else
  puts "Failed to run '#{command}'"
end

$LOAD_PATH.push(File.expand_path('lib', __dir__))

require 'uffizzi/cli'
Uffizzi::Cli.start
